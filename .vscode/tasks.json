          },
          {
            "regexp": "\\+.*"
          },
          {
            "regexp": "\\+.*"
          },
          {
            "regexp": "(.+)",
            "message": 1
          }
        ]
      }
    },
    {
      "label": "build all dev",
      "dependsOn": ["prebuild", "build", "postbuild dev"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
